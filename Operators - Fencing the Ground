import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int m = sc.nextInt();
        System.out.println("The required length is"+" "+ (2*(n+m))+" "+ "m");
        System.out.println("The required area of carpet is"+" "+ n*m + " "+"sqm");
    }
}
