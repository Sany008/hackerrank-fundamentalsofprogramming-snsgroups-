import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        int b = sc.nextInt();
        int c = sc.nextInt();
        if (c<=b || c%b==1 || c%b==0){
            System.out.println("Yes");
        }
        else {
            System.out.println("No");
        }
        }
    }
